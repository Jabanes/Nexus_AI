# ================================
# NEXUS VOICE ENGINE - Configuration
# ================================
# Copy this file to .env and fill in your actual values

# ================================
# NVIDIA PERSONAPLEX SIDECAR CONFIGURATION
# ================================
# CRITICAL: PersonaPlex runs as an EXTERNAL Docker container
PERSONAPLEX_WS_URL=ws://localhost:9000/v1/audio-stream

# Audio Protocol (Must match NVIDIA's config)
AUDIO_SAMPLE_RATE=16000
AUDIO_BIT_DEPTH=16
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=4096

# Connection settings
PERSONAPLEX_CONNECT_TIMEOUT=10
PERSONAPLEX_MAX_RECONNECT_ATTEMPTS=3
PERSONAPLEX_RECONNECT_DELAY=2

# ================================
# OTHER SETTINGS
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=COLOR
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
